<odoo>
<!-- clientes/views/cliente.xml -->
    <record id="view_clientes_list" model="ir.ui.view">
        <field name="name">clientes.cliente.list</field>
        <field name="model">clientes.cliente</field>
        <field name="arch" type="xml">
            <list>
                <!-- Campos que quieres mostrar en la vista tabla -->
                <field name="tipo" string="Tipo de Cliente"/>
                <field name="nombre" string="Nombre"/>
                <field name="regimen"/>
                <field name="rfc" string="RFC"/>
                <field name="curp" string="CURP"/>
                <field name="estado_civil" string="Estado Civil"/>
                <field name="codigop" string="Código Postal"/>
            </list>
        </field>
    </record>

    <!-- ESTA VISTA ES LA QUE ODOO ESTÁ LLAMANDO PARA CREAR UN NUEVO REGISTRO -->
    <record id="view_clientes_form" model="ir.ui.view">
        <field name="name">clientes.cliente.form</field>
        <field name="model">clientes.cliente</field>
        <field name="priority" eval="10"/>
        <field name="arch" type="xml">
            <form autosave = "False" edit = "0" create = "0">
                <header>
                    <!--button name="action_print" type="object" string="Imprimir" class="oe_highlight"/-->
                    <!--button name="unlink" string="Eliminar" type="object" class="oe_highlight"/-->
                    <group invisible="id == False">
                        <button name="action_editar" string="Editar" type="object" class="oe_highlight" confirm="¿Estas seguro que quieres editar el cliente?"/><!-- groups="security_roles.role_editor,security_roles.role_manager"/-->
                    </group> 

                    <group invisible="id != False">
                        <button name="action_save_and_return" string="Guardar y Volver" type="object" class="btn btn-primary" icon="fa-save"/>
                    </group>
                </header>
                <div>view_clientes_form</div>
                <sheet>
                <field name="persona_id" invisible="1"/>
                    <group>
                        <group>
                            <field name="tipo" widget="radio" options="{'horizontal': true}"/>
                            <field name="nombre" />
                            <field name="regimen"/>
                            <field name="rfc"/>
                            <field name="usar_rfc_generico" invisible="rfc" help="Marca solo si el cliente no tiene RFC y deseas usar el genérico del SAT."/>
                        </group>
                        <group string="Dirección">
                            <field name="codigop"/>
                            <field name="localidad"/>
                            <field name="colonia"/>
                            <field name="calle"/>
                            <field name="numero"/>
                        </group>
                    </group>

                    <group string="Contacto">
                        <field name="telefono"/>
                        <field name="email"/>
                    </group>

                    <notebook>
                        <page string="Datos Adicionales">
                            <group>
                                <field name="ine"/>
                                <field name="curp"/>
                                <field name="estado_civil"/>
                            </group>
                            <group invisible="not (estado_civil in ['casado', 'union_libre'])">
                                <field name="conyugue"/>
                                <field name="regimenconyugal"/>
                            </group>
                            <group>
                                <field name="empresa"/>
                                <field name="puesto"/>
                                <field name="ingresomensual"/>
                                <field name="dependientes"/>
                                <field name="tipovivienda"/>
                            </group>
                        </page>
                        <page string="Contactos">
                            <field name="contacto">
                                <list editable="bottom">
                                    <!-- persona_id puede ir oculto si no quieres mostrarlo -->
                                    <field name="persona_id" invisible="1"/>
                                    <field name="nombre"    placeholder="Nombre"/>
                                    <field name="descripcion"/>
                                    <field name="telefono"  placeholder="10 dígitos"/>
                                    <field name="email"     placeholder="correo@dominio"/>
                                    <!-- Botón del wizard de búsqueda por teléfono (opcional) -->
                                    <button name="%(contactos.action_phone_lookup_wizard)d" type="action" string="Buscar por teléfono" icon="fa-search"/>
                                </list>

                                <!-- mini-form para editar una línea del O2M -->
                                <form>
                                    <group>
                                        <field name="persona_id" invisible="1"/>
                                        <field name="nombre"/>
                                        <field name="telefono"/>
                                        <field name="email"/>
                                        <field name="descripcion"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    

    <!-- Vista de formulario para editar clientes -->
    <record id="view_clientes_form_edit" model="ir.ui.view">
        <field name="name">clientes.cliente.form.edit</field>
        <field name="model">clientes.cliente</field>
        <field name="arch" type="xml">
            <form>
            
                <header>
                    <group invisible="id == False">
                        <button name="action_save_and_return" string="Guardar y Volver" type="object" class="btn btn-primary" icon="fa-save"/>
                    </group>
                </header>
                <div>view_clientes_form_edit</div>
                <sheet>
                <field name="persona_id" invisible="1"/>
                    <group>
                        <group string="Información General">
                            <field name="tipo" widget="radio" options="{'horizontal': true}"/>
                            <field name="nombre"/>
                            <field name="regimen"/>
                            <field name="rfc"/>
                        </group>
                        <group string="Información Personal">
                            <field name="ine"/>
                            <field name="curp"/>
                            <field name="estado_civil"/>
                            <field name="conyugue"/>
                        </group>
                    </group>

                    <group string="Dirección">
                        <group>
                            <field name="localidad"/>
                            <field name="codigop"/>
                        </group>
                        <group>
                            <field name="colonia"/>
                            <field name="calle"/>
                            <field name="numero"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Contactos">
                            <field name="contacto">
                                <list editable="bottom">
                                    <!-- persona_id puede ir oculto si no quieres mostrarlo -->
                                    <field name="persona_id" invisible="1"/>
                                    <field name="nombre"    placeholder="Nombre"/>
                                    <field name="descripcion"/>
                                    <field name="telefono"  placeholder="10 dígitos"/>
                                    <field name="email"     placeholder="correo@dominio"/>
                                    <!-- Botón del wizard de búsqueda por teléfono (opcional) -->
                                    <button name="%(contactos.action_phone_lookup_wizard)d" type="action" string="Buscar por teléfono" icon="fa-search"/>
                                </list>

                                <!-- (Opcional) mini-form para editar una línea del O2M -->
                                <form>
                                    <group>
                                        <field name="persona_id" invisible="1"/>
                                        <field name="nombre"/>
                                        <field name="telefono"/>
                                        <field name="email"/>
                                        <field name="descripcion"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción principal que muestra la vista tabla -->
    <record id="action_clientes_model" model="ir.actions.act_window">
        <field name="name">Clientes</field>
        <field name="res_model">clientes.cliente</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_clientes_list"/>
        <!-- Aquí se fuerza que la primera vista sea la de lista -->
    </record>

    <!--menuitem id="menu_clientes_buscar_rfc" name="Buscar persona por RFC" parent="menu_clientes_root" action="action_rfc_lookup_wizard" sequence="20"/-->

    <menuitem id="menu_clientes_root" name="Clientes" sequence="10"/>
    <menuitem id="menu_clientes" name="Registros" parent="menu_clientes_root" action="action_clientes_model"/>
</odoo>
