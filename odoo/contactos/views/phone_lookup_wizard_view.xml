<!-- contactos/views/phone_lookup_wizard_view.xml -->
<odoo>
  <record id="view_phone_lookup_wizard" model="ir.ui.view">
    <field name="name">contactos.phone_lookup_wizard.form</field>
    <field name="model">contactos.phone_lookup_wizard</field>
    <field name="arch" type="xml">
      <form string="Buscar persona por teléfono">
        <group>
          <field name="telefono" placeholder="10 dígitos"/>
        </group>
        <footer>
          <button name="action_lookup" type="object" string="Buscar" class="btn-primary"/>
          <button special="cancel" string="Cancelar" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_phone_lookup_wizard" model="ir.actions.act_window">
    <field name="name">Buscar persona por teléfono</field>
    <field name="res_model">contactos.phone_lookup_wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>
</odoo>
