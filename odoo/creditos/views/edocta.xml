<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista formulario para el wizard -->
    <record id="view_transient_edocta_form" model="ir.ui.view">
        <field name="name">transient.edocta.form</field>
        <field name="model">transient.edocta</field>
        <field name="arch" type="xml">
            <form create="false" edit="false" delete="false" flags="{'form': {'action_buttons': false}}">
                <header>
                    <button name="generar" string="Generar Estado de Cuenta" type="object" class="btn-primary"/>
                    <button string="Cerrar" class="btn-secondary" special="cancel"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="contrato_id" widget="many2one" options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                        <group>
                            <field name="desde"/>
                            <field name="hasta"/>
                        </group>
                    </group>
                    
                    <field name="lines" create="false" delete="false" nolabel="1">
                        <list>
                            <field name="fecha"/>
                            <field name="referencia"/>
                            <field name="concepto"/>
                            <field name="cantidad"/>
                            <field name="precio"/>
                            <field name="importe"/>
                            <field name="cargo"/>
                            <field name="abono"/>
                            <field name="balance"/>
                        </list>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n para abrir el wizard -->
    <record id="action_transient_edocta" model="ir.actions.act_window">
        <field name="name">Estado de Cuenta</field>
        <field name="res_model">transient.edocta</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_transient_edocta_form"/>
    </record>

    <!-- MenÃº (opcional) -->
    <menuitem 
        id="menu_transient_edocta" 
        name="Estado de Cuenta" 
        action="action_transient_edocta"
        sequence="10"/>
</odoo>