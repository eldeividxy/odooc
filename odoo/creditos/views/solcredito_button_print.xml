<odoo>
  <data>
    <record id="credito_form_add_print_btn" model="ir.ui.view">
      <field name="name">credito.form.add.print.btn</field>
      <field name="model">creditos.credito</field>
      <!-- usa tu id real de vista form -->
      <field name="inherit_id" ref="creditos.view_credito_detail"/>
      <field name="arch" type="xml">
        <xpath expr="//header" position="inside">
          <button name="%(creditos.action_report_credito)d"
                  string="Generar solicitud"
                  type="action"
                  class="oe_highlight"
                  invisible="not id or is_editing"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
