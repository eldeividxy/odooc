<odoo>
    <!-- Acción de Menú (DEBE IR PRIMERO) -->
    <record id="action_cultivos" model="ir.actions.act_window">
        <field name="name">cultivos</field>
        <field name="res_model">cultivos.cultivo</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Listado de Cultivos</p>
        </field>
    </record>

    <!-- Vista árbol -->
    <record id="view_cultivo_list" model="ir.ui.view">
        <field name="name">cultivo.tree</field>
        <field name="model">cultivos.cultivo</field>
        <field name="arch" type="xml">
            <list>
                <field name="nombre"/>
            </list>
        </field>
    </record>

    <!-- Vista formulario -->
    <record id="view_cultivo_form" model="ir.ui.view">
        <field name="name">cultivo.form</field>
        <field name="model">cultivos.cultivo</field>
        <field name="arch" type="xml">
            <form autosave="False">
                <sheet>
                    <group>
                        <field name="nombre"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menús -->
    <menuitem id="menu_root" name="cultivos" sequence="10"/>
    <menuitem id="menu_action" name="Catálogo de cultivos" parent="menu_root" action="action_cultivos"/>
</odoo>
