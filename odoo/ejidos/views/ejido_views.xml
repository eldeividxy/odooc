<odoo>
    <!-- LIST -->
    <record id="view_ejidos_list" model="ir.ui.view">
        <field name="name">ejidos.ejido.list</field>
        <field name="model">ejidos.ejido</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Ejidos">
                <field name="display_name"/>
                <field name="nombre"/>
                <field name="localidad_id"/>
                <field name="municipio_id"/>
                <field name="estado"/>
            </list>
        </field>
    </record>

    <!-- FORM -->
    <record id="view_ejidos_form" model="ir.ui.view">
        <field name="name">ejidos.ejido.form</field>
        <field name="model">ejidos.ejido</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Ejido">
                <header>
                    <button name="action_back_to_list" string="Volver"
                        type="object" class="btn btn-secondary" icon="fa-arrow-left"/>
                </header>
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="localidad_id"/>
                        <field name="municipio_id" readonly="1" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                        <field name="estado" readonly="1"/>
                        <field name="display_name" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_ejidos" model="ir.actions.act_window">
        <field name="name">Ejidos</field>
        <field name="res_model">ejidos.ejido</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- MENÃš -->
    <menuitem id="menu_ejidos_root" name="Ejidos" sequence="10"/>
    <menuitem id="menu_ejidos" name="Ejidos" parent="menu_ejidos_root"
              action="action_ejidos" sequence="10"/>
</odoo>
