<odoo>
    <record id="action_empresas" model="ir.actions.act_window">
        <field name="name">Empresas</field>
        <field name="res_model">empresas.empresa</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_empresa_list" model="ir.ui.view">
        <field name="name">empresas.empresa.list</field>
        <field name="model">empresas.empresa</field>
        <field name="arch" type="xml">
            <list>
                <field name="nombre"/>
                <field name="rfc"/>
                <field name="telefono"/>
                <field name="codigo"/>
            </list>
        </field>
    </record>

    <record id="view_empresa_form" model="ir.ui.view">
        <field name="name">empresas.empresa.form</field>
        <field name="model">empresas.empresa</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="codigo" readonly="1"/>
                        <field name="nombre"/>
                        <field name="telefono"/>
                        <field name="razonsocial"/>
                        <field name="rfc"/>
                        <field name="cp"/>
                        <field name="calle"/>
                        <field name="numero"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="menu_emp_root" name="Empresas"/>
    <menuitem id="menu_emp_action" name="CatÃ¡logo de empresas" parent="menu_emp_root" action="action_empresas"/>
</odoo>

