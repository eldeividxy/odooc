<odoo>
    <record id="action_georeferencia" model="ir.actions.act_window">
        <field name="name">Georeferencias</field>
        <field name="res_model">georeferencias.georeferencia</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Use esta vista para gestionar las georeferencias de sus predios.
            </p>
        </field>
    </record> 

    <record id="view_georeferencia_tree" model="ir.ui.view">
        <field name="name">georeferencia.tree</field>
        <field name="model">georeferencias.georeferencia</field>
        <field name="arch" type="xml">
            <list>
                <field name="lat"/>
                <field name="lon"/>
            </list>
        </field>
    </record>

    <record id="view_georeferencia_form" model="ir.ui.view">
        <field name="name">georeferencia.form</field>
        <field name="model">georeferencias.georeferencia</field>
        <field name="arch" type="xml">
            <form string="Georeferencia">
                <sheet>
                    <group>
                        <field name="lat"/>
                        <field name="lon"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- MenÃºs -->
    <menuitem id="menu_root" name="Georeferencias" sequence="10"/>
    <menuitem id="menu_action" name="Georeferencias" parent="menu_root" action="action_georeferencia"/>
</odoo>