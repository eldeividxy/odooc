<odoo>
    <!-- Acción de Menú (DEBE IR PRIMERO) -->
    <record id="action_localidades" model="ir.actions.act_window">
        <field name="name">Localidades</field>
        <field name="res_model">localidades.localidad</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Crea tu primer localidad</p>
        </field>
    </record>

    <!-- Vista árbol -->
    <record id="view_localidad_list" model="ir.ui.view">
        <field name="name">localidades.localidad.tree</field>
        <field name="model">localidades.localidad</field>
        <field name="arch" type="xml">
            <list>
                <field name="nombre"/>
                <field name="municipio"/>
                <field name="estado"/>
            </list>
        </field>
    </record>

    <!-- Vista formulario -->
    <record id="view_localidad_form" model="ir.ui.view">
        <field name="name">localidades.localidad.form</field>
        <field name="model">localidades.localidad</field>
        <field name="arch" type="xml">
            <form autosave="False">
                <header>
                    <button name="action_back_to_list" string="Volver"
                        type="object" class="btn btn-secondary" icon="fa-arrow-left"/>
                </header>
                <sheet>
                    <group>
                        <field name="estado"/>
                        <field name="municipio"/>
                        <field name="nombre"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menús -->
    <menuitem id="menu_root" name="Localidades" sequence="10"/>
    <menuitem id="menu_action" name="Localidades/Ciudades" parent="menu_root" action="action_localidades"/>
</odoo>
