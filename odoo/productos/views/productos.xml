<!-- productos-views-productos.xml -->
<odoo>
    <!--Acción de Menú-->
    <record id="action_productos" model="ir.actions.act_window">
        <field name="name">Productos</field>
        <field name="res_model">productos.producto</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <!-- Vista árbol -->
    <record id="view_productos_tree" model="ir.ui.view">
        <field name="name">producto.tree</field>
        <field name="model">productos.producto</field><!-- Nombre del modelo _name -->
        <field name="arch" type="xml">
            <list>
                <field name="codigo"/>
                <field name="name"/>
                <field name="unidad"/>
                <field name="costo"/>
                <field name="contado"/>
                <field name="credito"/>
                <field name="tipoProducto"/>
                <field name="iva"/>
                <field name="ieps"/>
            </list>
        </field>
    </record>

    <!-- Vista formulario -->
    <record id="view_productos_form" model="ir.ui.view">
        <field name="name">producto.form</field>
        <field name="model">productos.producto</field>
        <field name="arch" type="xml">
            <form autosave = "False">
                <header>
                    <button name="action_back_to_list" string="Volver"
                        type="object" class="btn btn-secondary" icon="fa-arrow-left"/>
                </header>
                <sheet>
                    <group>
                        <field name="tipoProducto"/>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="codigosat"
                        options="{'no_create': True}"
                        context="{'show_code': True, 'show_description': True}"/>
                        <field name="linea"/>
                        <field name="unidad"/>
                        <field name="sat_uom_id"/>
                        <field name="sat_unspsc_id"/>
                        <field name="product_id" readonly="1"/>
                        <field name="costo" options="{'force_input': True}" placeholder="0.00"/>
                        <field name="contado" options="{'force_input': True}" placeholder="0.00"/>
                        <field name="credito" options="{'force_input': True}" placeholder="0.00"/>
                        <field name="iva"/>
                        <field name="ieps"/>
                    </group>               
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menús -->
    <menuitem id="menu_root" name="Productos"/>
        <menuitem id="menu_action" name="Lista de Productos" parent="menu_root" action="action_productos"/>
    <!--        <menuitem id="menu_final" name="Productos" parent="menu_action" action="action_productos"/>-->
</odoo>
