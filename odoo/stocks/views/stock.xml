<odoo>
    <record id="view_stock_sucursal_producto_list" model="ir.ui.view">
        <field name="name">stock.sucursal.producto.list</field>
        <field name="model">stock.sucursal.producto</field>
        <field name="arch" type="xml">
            <list string="Existencias por Sucursal">
                <field name="sucursal_id"/>
                <field name="producto_id"/>
                <field name="cantidad"/>
            </list>
        </field>
    </record>

    <record id="view_stock_sucursal_producto_form" model="ir.ui.view">
        <field name="name">stock.sucursal.producto.form</field>
        <field name="model">stock.sucursal.producto</field>
        <field name="arch" type="xml">
            <form string="Existencia por Sucursal">
                <sheet>
                    <group>
                        <field name="sucursal_id"/>
                        <field name="producto_id"/>
                        <field name="cantidad"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_stock_sucursal_producto" model="ir.actions.act_window">
        <field name="name">Existencias</field>
        <field name="res_model">stock.sucursal.producto</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menú bajo el menú raíz de Sucursales (del módulo sucursales_base).
       Si prefieres otro menú raíz, cámbialo aquí. -->
    <menuitem id="menu_stk_root" name="Inventario (Sucursales)"/>
    <menuitem id="menu_stock_sucursal_producto" name="Existencias" parent="menu_stk_root" action="action_stock_sucursal_producto"/>

</odoo>
