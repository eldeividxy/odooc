<odoo>
  <!-- usuarios/views/record_rules.xml -->
 <record id="rule_empresas_por_usuario" model="ir.rule">
  <field name="name">Empresas permitidas por usuario</field>
  <field name="model_id" ref="empresas.model_empresas_empresa"/>
  <field name="groups" eval="[(4, ref('base.group_user'))]"/>
  <field name="domain_force">[('id','in', user.empresas_ids.ids)]</field>
 </record>

 <record id="rule_sucursales_por_usuario" model="ir.rule">
  <field name="name">Sucursales permitidas por usuario</field>
  <field name="model_id" ref="sucursales.model_sucursales_sucursal"/>
  <field name="groups" eval="[(4, ref('base.group_user'))]"/>
  <field name="domain_force">[('id','in', user.sucursales_ids.ids)]</field>
 </record>

</odoo>
