<odoo>
  <record id="view_users_form_inherit_empresa_sucursal" model="ir.ui.view">
    <field name="name">res.users.form.empresa.sucursal</field>
    <field name="model">res.users</field>
    <field name="inherit_id" ref="base.view_users_form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet/notebook" position="inside">
        <page string="Empresas y Sucursales">
          <group>
            <field name="empresas_ids" widget="many2many_tags"/>
            <field name="sucursales_ids" widget="many2many_tags"
                   domain="[('empresa','in', empresas_ids)]"/>
          </group>
          <group>
            <field name="empresa_actual_id"
                   domain="[('id','in', empresas_ids)]"/>
            <field name="sucursal_actual_id"
                   domain="[('id','in', sucursales_ids), ('empresa','=', empresa_actual_id)]"/>
          </group>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
